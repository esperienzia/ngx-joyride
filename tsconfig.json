{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": true,
        "typeRoots": [
          "node_modules/@types"
        ],
        "target": "es2015",
        "lib": [
          "es2016",
          "es2017",
          "dom"
        ],
        "baseUrl": ".",
        "paths": {
            "ngx-joyride": ["src/lib/public_api.ts"]
        },
        "skipLibCheck": true // https://github.com/cypress-io/cypress/issues/1087
    },
    "files": ["./src/demo/main.ts"],
    "include": ["src/demo/app/**/*.ts"],
    "exclude": ["node_modules"]
}
